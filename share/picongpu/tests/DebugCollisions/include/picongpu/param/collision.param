#pragma once

#include "picongpu/particles/collision/collision.def"


namespace picongpu
{
    namespace particles
    {
        namespace collision
        {
            namespace precision
            {
                using float_COLL = float_64;
            } // namespace precision

            /* collisions between electrons and ions*/
            struct ParamsElectronIon
            {
               static constexpr float_X coulombLog = 5.0_X;
            };
            /* collisions between different ion species */
            struct ParamsIonIon
            {
               static constexpr float_X coulombLog = 10.0_X;
            };
            /* collisions between the same species */
            struct ParamsIntraSpecies
            {
               static constexpr float_X coulombLog = 10.0_X;
            };
            using PairsElectronIon = MakeSeq_t<
                Pair<Electrons, Hydrogen>,
                Pair<Electrons, Carbon>,
                Pair<Electrons, Oxygen>
                >;
            using PairsIonIon = MakeSeq_t<
                Pair<Hydrogen, Carbon>,
                Pair<Hydrogen, Oxygen>,
                Pair<Carbon, Oxygen>
                >;
            using PairsIntraSpecies = MakeSeq_t<
                Pair<Electrons, Electrons>,
                Pair<Hydrogen, Hydrogen>,
                Pair<Carbon, Carbon>,
                Pair<Oxygen, Oxygen>
                >;

            /** CollisionPipeline defines in which order species interact with each other
             *
             * the functors are called in order (from first to last functor)
             */
            using CollisionPipeline = bmpl::vector<
                    Collider<binary::DoNothing, PairsElectronIon, ParamsElectronIon>,
                    Collider<binary::DoNothing, PairsIonIon, ParamsIonIon>,
                    Collider<binary::DoNothing, PairsIntraSpecies, ParamsIntraSpecies>
                >;

        } // namespace collision
    } // namespace particles
} // namespace picongpu
